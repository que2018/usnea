.container {
  padding: 0px 40px 0px 40px;
  background: url('https://usnea.org/api/image/bg_result.jpg') no-repeat;
  background-size: 100% 100%;
}
.pimg {
  width:220px;
  height:220px;
  display: block;
  margin: 0 auto;
  margin-top: 15px;
  margin-bottom: 15px;
}
.pname {
  font-size: 22px;
  font-weight:bold;
  text-align: center;
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 10px;
}
.spec {
  font-size: 12px;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 40px;  
  align-items: center;
}
.td {
    width: 50%;
    justify-content: center;
    text-align: center;
    font-size: 15px;
}
.ptr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 40px;
  align-items: center;
}
.ptd {
    width: 50%;
    justify-content: center;
    text-align: center;
    font-size: 15px;
}
.simg {
  width: 37px;
  height: 30px;
  float: left;
}
.pmsg {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  line-height: 30px;
  padding-left: 2px;
}
.pwrap {
  width: 60vw;
  margin: 0 auto;
  padding-top: 10px;
  padding-bottom: 10px;
}
.table {
  margin-bottom: 30px;
}