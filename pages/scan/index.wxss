.container {
  padding: 30px 30px;
  font-family: Arial, Helvetica, sans-serif;
  position: relative;
  height: 100vh;
}
.scan {
  width:90px;
  height:90px;
  display: block;
  margin: 0 auto;
  position: absolute;
  bottom: 80px;
  z-index: 1000;
}
.title {
  font-size: 24px;
  font-weight: bold;
  position: absolute;
  top: 20px;
}
.content {
  font-size: 14px;
  text-align: justify;
  position: absolute;
  top: 60px;
  padding-left: 30px;
  padding-right: 30px;
} 
.note1 {
  position: absolute;
  bottom: 30px;
  font-size: 14px;
  color: #cccccc;
}
.note2 {
  position: absolute;
  bottom: 50px;
  font-size: 14px;
  color: #cccccc;
}
